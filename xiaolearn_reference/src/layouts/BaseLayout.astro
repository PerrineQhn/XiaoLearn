---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  canonical?: string;
}

const {
  title,
  description = "Apprenez le chinois mandarin : dictionnaire, grammaire et nuances expliquées en français pour les francophones.",
  canonical,
} = Astro.props;

const fullTitle = title === 'Accueil' ? 'XiaoLearn Référence - Apprendre le mandarin' : `${title} | XiaoLearn Référence`;
const siteOrigin = Astro.site?.toString() || 'https://xiaolearn.com';
const canonicalUrl = canonical || new URL(Astro.url.pathname, siteOrigin).toString();
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta name="robots" content="index,follow" />
  <link rel="canonical" href={canonicalUrl} />

  <!-- Open Graph -->
  <meta property="og:title" content={fullTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:locale" content="fr_FR" />
  <meta property="og:site_name" content="XiaoLearn Référence" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={fullTitle} />
  <meta name="twitter:description" content={description} />

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/logos/logo_onglet.png" />

  <title>{fullTitle}</title>
</head>
<body>
  <Header />

  <main>
    <slot />
  </main>

  <Footer />
</body>
</html>

<style>
  main {
    min-height: calc(100vh - var(--header-height) - 300px);
  }
</style>
